@page
@model ProjektSchronisko.Pages.Animals.IndexPhotosModel
@{
}


<p>
    <a asp-page="Index">Zmień wygląd</a>
</p>
<form method="get">
    <div class="input-group">
        <input class="form-control" asp-for="SearchTerm" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Szukaj</button>
        </div>
    </div>
</form>
<div class="card-deck align-items-center">
    @foreach (var animal in Model.Animals)
    {
        var photoPath="";
            if (animal.PhotoPath != null)
            {
                photoPath = (animal.PhotoPath ?? "/Images/noimage.jpg");
            }
            else
            {
                photoPath = (animal.PhotoPathURL ?? "/Images/noimage.jpg");
            }
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@animal.Name</h3>
                </div>

                <img class="card-img-top imageThumbnail" height="350" src="@photoPath"
                     asp-append-version="true" />

                <div class="card-footer text-center">
                    <a asp-page="./Details" asp-route-id="@animal.IdAnimal" style="width:100%;"  class="btn btn-primary m-1">Szczegóły</a>
                </div>
            </div>
        }
    </div>