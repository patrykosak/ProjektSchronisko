<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zaadoptuj.pl</title>
    <link href="~/Images/logo.jpg" rel="icon" type="images/png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">

                <a class="navbar-brand" style="white-space:nowrap;" asp-page="/Index">
                    <img src="~/Images/logo.jpg" width="50" height="43" alt="">
                     Zaadoptuj.pl
                </a>
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Adopcja
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-page="/Animals/Index">Zwierzęta do adopcji</a>
                                <a class="dropdown-item" asp-page="/WiseAdoption">Mądra adopcja</a>
                                <a class="dropdown-item" asp-page="/VirtualAdoption">Wirtualna adopcja</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Reports/ReportAboutLossOfPet">Poszukiwane</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AdoptedAnimals">Adoptowane</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Donation">Darowizna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="white-space:nowrap;" asp-area="" asp-page="/aboutUs">O nas</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ProjektSchronisko - <a asp-area="" asp-page="/aboutUs">O nas</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
