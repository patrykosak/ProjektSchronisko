@page
@model ProjektSchronisko.Pages.WorkHoursAndDays.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły terminu</h1>

<div>
    @if(Model.ItIsYourShift) {
        <h4 style="color:forestgreen">Dzięki takim jak Ty zwierzaki nie zostają same!</h4>
    } else {
<h4 style="color:forestgreen">Jeśli interesuje Cię ten termin, wpisz się  <a asp-page="./Create">tutaj!</a></h4>
    }
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkHours.From)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkHours.From)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkHours.To)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkHours.To)
        </dd>
        <dt class="col-sm-2">
            <span>Czy to Twoja zmiana</span>
        </dt>
        <dd class="col-sm-10">
            @if(Model.ItIsYourShift) {
                <span style="color:forestgreen">TAK</span>
            } else {
                <span style="color:crimson">NIE</span>
            }
        </dd>
    </dl>
</div>
<div>

    @if(Model.ItIsYourShift) {
        <a asp-page="./Edit" asp-route-id="@Model.WorkHours.Id">Edytuj termin </a> <b>|</b>
        <a asp-page="./Delete" asp-route-id="@Model.WorkHours.Id">Usuń całkowicie</a> <b>|</b>
    }
    <a asp-page="./Index">Powróć do listy terminów</a>
</div>
