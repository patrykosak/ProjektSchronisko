@page
@model ProjektSchronisko.Pages.Reports.ReportsModel
@{
}
<style>
    .space {
        margin-top: 0.3rem;
        margin-right: 1rem;
    }
</style>
<h3 class="text-info pt-2 pb-3" style="text-align:center; padding-bottom:0px !important;">Twoje zwierzątko domowe uciekło lub inne zwierze błąka się po ulicach miasta? A może masz podejrzenia znęcania się nad zwierzęciem?</h3>
<h3 class="text-info pt-2 pb-3" style="text-align:center;">Zgłoś to, postaramy się zrobić w tej sprawie wszystko co w naszej mocy.</h3>
<div class=" text-center">
    <a asp-page="./Create" class="btn btn-primary m-1">Zgłoś!</a>
</div>
<hr />

<div class="text-center">
    <p>Tutaj znajdziesz poszukiwane zwierzęta</p>
    <hr />
</div>


<form method="get">
    <div class="input-group">
        <p class="space">Wpisz miasto:  </p>
        <input class="form-control" asp-for="SearchTerm" />
        <div class="input-group-append">
            <button type="submit" style="height:38px;" class="btn btn-primary">Szukaj</button>
        </div>
    </div>
</form>


<div class="card-deck align-items-center">
    @foreach (var report in Model.ReportsAnimal)
    {
        var photoPath = "~/Images/" + (report.PhotoPath ?? "noimage.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@report.AnimalName</h3>
            </div>

            <img class="card-img-top imageThumbnail" style="height: 350px;" src="@photoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-page="./Details" asp-route-id="@report.IdReport" class="btn btn-primary m-1">Podgląd</a>
                <a asp-page="./Edit" asp-route-id="@report.IdReport" class="btn btn-primary m-1">Edytuj</a>
                <a asp-page="./Delete" asp-route-id="@report.IdReport" class="btn btn-danger m-1">Usuń</a>
            </div>
        </div>
    }
</div>

