@page
@model ProjektSchronisko.Pages.Reports.ReportAboutLossOfPetModel
@{
}
<style>
    .btn {
        width: 85px;
    }
</style>

<h3 class="text-info pt-2 pb-3">Twoje zwierzątko domowe uciekło lub wydaje Ci się że zwierze jest znęcane, bezpańskie?</h3>
<h3 class="text-info pt-2 pb-3">Zgłoś to, a my postaramy się zrobić wszystko co w naszej mocy.</h3>
<div class=" text-center">
    <a asp-page="./Create" class="btn btn-primary m-1">Zgłoś!</a>
</div>
<hr />

<div class="text-center">
    <h6 class="display-4">Witaj</h6>
    <p>Tutaj znajdziesz poszukiwane zwierzęta</p>
    <hr />
</div>


<form method="get">
    <div class="input-group">
        <p>Wpisz miasto:  </p>
        <input class="form-control" asp-for="SearchTerm" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Szukaj</button>
        </div>
    </div>
</form>


<div class="card-deck">
    @foreach (var report in Model.ReportsAnimal)
    {
        var photoPath = "~/Images/" + (report.PhotoPath ?? "noimage.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@report.AnimalName</h3>
            </div>

            <img class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-page="./Details" asp-route-id="@report.IdReport" class="btn btn-primary m-1">Podgląd</a>
                <a asp-page="./Edit" asp-route-id="@report.IdReport" class="btn btn-primary m-1">Edytuj</a>
                <a asp-page="./Delete" asp-route-id="@report.IdReport" class="btn btn-danger m-1">Usuń</a>
            </div>
        </div>
    }
</div>
