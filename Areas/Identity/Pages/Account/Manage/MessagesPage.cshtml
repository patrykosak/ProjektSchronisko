@page
@model ProjektSchronisko.Areas.Identity.Pages.Account.Manage.MessagesPageModel
@{
}


<div>
    <a asp-page="./ConversationsPage">Wróć do listy</a>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h6><font size="5"><b><i>Czat</i></b></font></h6>
            <div class="form-group">
                <label asp-for="@Model.Message" class="control-label"></label>
                <input asp-for="@Model.Message" class="form-control" />
                <span asp-validation-for="@Model.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Wyślij wiadomość" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row">

    @foreach (var message in Model.Messages)
    {
        if (message.From == Model.UserId)
        {
            <div class="col-sm-10">
                <snap style="color: teal">@Html.DisplayFor(model => message.MessageU)</snap>
            </div>
        }
        else
        {
            <div class="col-sm-10">
                <snap style="color: gray">@Html.DisplayFor(model => message.MessageU)</snap>
            </div>
        }


    }
</div>
