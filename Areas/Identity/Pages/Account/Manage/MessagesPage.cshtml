@page
@model ProjektSchronisko.Areas.Identity.Pages.Account.Manage.MessagesPageModel
@{
}
<link rel="stylesheet" href="~/css/messages.css">
<link rel="stylesheet" href="~/css/site.css">


<div>
    <a asp-page="./ConversationsPage">Wróć do listy</a>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h6><font size="5"><b><i>Czat</i></b></font></h6>
            <div class="form-group">
                <label asp-for="@Model.Message" class="control-label"></label>
                <input asp-for="@Model.Message" class="form-control" />
                <span asp-validation-for="@Model.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Wyślij wiadomość" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr>
<div class="containerXD">

    @foreach(var message in Model.Messages) {<hr>
        if(message.From == Model.UserId) {

            <div class="message-blueXD">
                <p class="message-contentXD">@Html.DisplayFor(model => message.MessageU)</p>
            </div>

        } else {

            <div class="message-orangeXD">
                <p class="message-contentXD">@Html.DisplayFor(model => message.MessageU)</p>
            </div>
        }
    }
</div>

